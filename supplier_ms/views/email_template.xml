<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="email_template_supplier_otp" model="mail.template">
            <field name="name">Supplier OTP Verification</field>
            <field name="model_id" ref="supplier_ms.model_supplier_otp"/>
            <field name="subject">Your OTP Code: ${object.otp}</field>
            <field name="email_from">${(object.company_id.email or 'abdullah74332@gmail.com')|safe}</field>
            <field name="email_to">${object.email}</field>
            <field name="body_html"><![CDATA[
                <p>Hello,</p>
                <p>Your OTP for supplier registration is: <strong>${object.otp}</strong></p>
                <p>This OTP will expire in 10 minutes.</p>
                <p>Best Regards,</p>
                <p>Your Company Name</p>
            ]]></field>
        </record>
    </data>
</odoo>